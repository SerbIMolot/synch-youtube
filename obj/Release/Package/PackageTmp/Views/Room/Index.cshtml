@using Chat.Views.Room
@model RoomIndexVM
@{
    ViewBag.Title = "Index";
}
<div class="col-md-8">
    <section id="loginForm">
        @using (Html.BeginForm("CreateRoom", "Room", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Use a local account to log in.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(r => r.newRoom.RoomName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(r => r.newRoom.RoomName, new { @class = "form-control" })

                    @Html.ValidationMessageFor(r => r.newRoom.RoomName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create Room" class="btn btn-default" />
                </div>
            </div>
            foreach (var item in Model.userRooms)
            {
                <div>
                    @*@item.RoomName*@
                    @Html.ActionLink(item.RoomName, "Chat","Room", new { id  = item.RoomName }, null);
                    <hr />
                </div>
            }
            <p>
                @Html.ActionLink("Register as a new user", "Register")
            </p>
            @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
        }
    </section>
</div>
<h2>Index</h2>

