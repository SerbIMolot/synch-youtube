@using Chat.Models
@model TemporaryLoginViewModel
@section Styles {
    <link href="@Url.Content("/Content/Login.css")" rel="stylesheet" type="text/css" />
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <h4>Log in.</h4>
        <hr />
        @using (Html.BeginForm("TemporaryLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "error-text", @id = "error-ext" })

            @Html.TextBoxFor(m => m.Username, new { @id = "username", @class = "fadeIn second", @name = "username", @placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            <input type="submit" class="fadeIn fourth" value="Log In" , id="submitLogin">
            <p>
                @Html.ActionLink("Register as a new user", "Register", null, new { @id = "register" })
            </p>

        }

    </div>

</div>
