@{
    Layout = null;
    var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();

}
@model Chat.ChatViewModel

<ol class="msg_history" id="msg_history">
    @if (Model.messageHistory.Count > 0)
    {

        foreach (var msg in Model.messageHistory)
        {
            if (msg.SenderUser.UserName == ViewBag.userName)
            {
                <li class="outgoing_msg">
                    <div class="sent_msg">
                            <div class="outgoing_msg sender_name">
                                <p>
                                    @msg.SenderUser.UserName

                                </p>
                            </div>
                        <div class="received_withd_msg">
                            <p>
                                @msg.message
                            </p>
                        </div>
                        <span class="time_date"> @msg.sendDate </span>
                    </div>
                </li>
            }
            else
            {
                <li class="incoming_msg">
                    <div class="received_msg">
                        <div class="received_msg sender_name">
                            @msg.SenderUser.UserName
                        </div>
                        <div class="received_withd_msg">
                            <p>
                                @msg.message
                            </p>
                        </div>
                        <span class="time_date" id="msg_time"> @msg.sendDate </span>
                    </div>
                </li>
            }
        }
    }

</ol>
<div class="type_msg">
    <input type="text" id="write_msg" class="write_msg" placeholder="Type a message" />
    <button class="msg_send_btn" id="msg_send_btn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
    <div class="input_msg_write" style="display: none;">

    </div>
</div>
@section Script
{
    <script type="text/javascript">
        var currentRoom = @Html.Raw(Json.Encode(Model.currentRoomName));
    </script>
}

